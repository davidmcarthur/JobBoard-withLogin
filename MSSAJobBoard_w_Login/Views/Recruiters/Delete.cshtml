@model MSSAJobBoard_w_Login.Recruiter

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this Recruiter?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LName)
        </dd>

        <dt>
            eMail Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eMailAddress)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            LinkedIn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LinkedIn)
        </dd>

        <dt>
            Company/Agency
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-lg" /> 
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
