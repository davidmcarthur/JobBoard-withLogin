@model IEnumerable<MSSAJobBoard_w_Login.Job>

@{
    ViewBag.Title = "Index";
}

<h2>MSSA Job Board</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Job Title
        </th>
        <th>
            Company Name
        </th>
        <th>
            Job Link (URL)
        </th>
        <th>
            Job Description
        </th>

        <th>
            Recruiter Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Recruiter.FName)
            @Html.DisplayFor(modelItem => item.Recruiter.LName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
